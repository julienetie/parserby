{
  "name": "xsskillah",
  "version": "0.1.0",
  "description": "A Fast Minimal HTML Sanitizer",
  "main": "index.js",
  "type": "module",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "copy:parser": "cp node_modules/htmlparser2/lib/esm/Parser.js  libs/",
    "copy:tokenizer": "cp node_modules/htmlparser2/lib/esm/Tokenizer.js  libs/",
    "copy:libs": "npm run copy:parser && npm run copy:tokenizer",
    "make:parser": "npm run copy:libs && rollup -c ./setup/rollup.config.libs.js",
    "d": "./node_modules/.bin/http-server -p=3333 -o",
    "lint": "./node_modules/.bin/eslint --fix ./src/"
  },
  "author": "Julien Etienne",
  "license": "Apache-3.0",
  "dependencies": {
    "entities": "^4.5.0",
    "htmlparser2": "^9.1.0"
  },
  "devDependencies": {
    "@rollup/plugin-node-resolve": "^15.2.3",
    "eslint": "^8.56.0",
    "eslint-config-standard": "^17.1.0",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-n": "^16.6.2",
    "eslint-plugin-promise": "^6.1.1",
    "http-server": "^14.1.1"
  }
}